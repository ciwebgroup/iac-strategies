# =============================================================================
# WORDPRESS FARM - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN=example.com
ACME_EMAIL=admin@example.com

# =============================================================================
# DOCKER REGISTRY
# =============================================================================
DOCKER_REGISTRY=registry.example.com

# =============================================================================
# TRAEFIK
# =============================================================================
# Generate with: htpasswd -nb admin password | sed -e 's/\$/\$\$/g'
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$xxxxx$$xxxxxxxxxxxxxxxxx

# =============================================================================
# CROWDSEC
# =============================================================================
CROWDSEC_BOUNCER_API_KEY=your-bouncer-api-key
CROWDSEC_AGENT_USERNAME=crowdsec-agent
CROWDSEC_AGENT_PASSWORD=your-agent-password
# Optional: CrowdSec Console enrollment key
# CROWDSEC_ENROLL_KEY=your-enroll-key

# =============================================================================
# MARIADB GALERA
# =============================================================================
MARIADB_ROOT_PASSWORD=your-secure-root-password
MARIADB_USER=wordpress
MARIADB_PASSWORD=your-secure-wp-password
MARIADB_SST_USER=sst_user
MARIADB_SST_PASSWORD=your-secure-sst-password
MARIADB_BACKUP_USER=backup_user
MARIADB_BACKUP_PASSWORD=your-secure-backup-password
MARIADB_EXPORTER_USER=exporter
MARIADB_EXPORTER_PASSWORD=your-exporter-password

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=your-secure-redis-password

# =============================================================================
# GRAFANA
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password

# =============================================================================
# DIGITALOCEAN SPACES (S3-Compatible Backup Storage)
# =============================================================================
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=wp-farm-backups
DO_SPACES_ACCESS_KEY=your-spaces-access-key
DO_SPACES_SECRET_KEY=your-spaces-secret-key

# =============================================================================
# BACKUP
# =============================================================================
BACKUP_ENCRYPTION_KEY=your-32-character-encryption-key

# =============================================================================
# NFS (GlusterFS)
# =============================================================================
NFS_SERVER=10.0.5.10

# =============================================================================
# NOTIFICATIONS
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# =============================================================================
# TIMEZONE
# =============================================================================
TZ=UTC


